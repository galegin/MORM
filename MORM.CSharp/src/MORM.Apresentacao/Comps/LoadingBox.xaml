<local:AbstractWindow x:Class="MORM.Apresentacao.LoadingBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MORM.Apresentacao"
        mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="LoadingBox" 
        MinHeight="250" MinWidth="250"
        ShowInTaskbar="False"
        Height="300" Width="Auto">

    <Window.Background>
        <SolidColorBrush Opacity="0.4" Color="White"/>
    </Window.Background>

    <Grid>
        <DockPanel>
            <Label Content="{Binding Mensagem}" FontSize="24" Foreground="Black" 
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </DockPanel>
        
    </Grid>
</local:AbstractWindow>