<comps:AbstractUserControl x:Class="MORM.Apresentacao.AbstractBusca"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MORM.Apresentacao"
             xmlns:comps="clr-namespace:MORM.Apresentacao"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid>
        <DockPanel>
            <Label Width="100" Content="Expressão" FontSize="16" DockPanel.Dock="Left"/>
            <TextBox Text="{Binding Expressao}" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        </DockPanel>
    </Grid>
</comps:AbstractUserControl>