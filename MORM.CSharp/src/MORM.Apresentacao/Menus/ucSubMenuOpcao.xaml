<comps:AbstractUserControl x:Class="MORM.Apresentacao.Menus.ucSubMenuOpcao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:comps="clr-namespace:MORM.Apresentacao.Comps"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="210">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <Button Height="40" Width="210" Margin="0"
                        Style="{StaticResource InlineButton}"
                        Command="{Binding ExecutarSubMenu}" CommandParameter="{Binding}"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Height="40" Width="208" 
                                   Text="{Binding MenuOpcao.Descricao}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   />
                    </StackPanel>
                </Button>
            </StackPanel>

        </DockPanel>

    </Grid>
</comps:AbstractUserControl>